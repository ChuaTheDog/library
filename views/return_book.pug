extends layout
block content 
    
  h1 Patron: Return Book
  p
    strong Book Title: 
    | #{loan.book.title}
  p
    strong Loaned By: 
    | #{loan.patron.first_name} #{loan.patron.last_name}
  p
    strong Loaned On: 
    | #{loan.loaned_on}
  p
    strong Return By: 
    | #{loan.return_by}
  form
    p
      label(for='returned_on') Returned on:
      input#returned_on(type='text' value=`${moment().format('MM-DD-YYYY')}` name='returned_on')
    p
      input(type='submit' value='Return Book')
